@model IEnumerable<PlantillaMVC.Web.Models.AgregarCarta>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Respuestas</title>
</head>
<body>
    <h2>Cartas Registradas</h2>
    <table>
        <thead>
            <tr><th>Nombre</th></tr>
        </thead>
        <tbody>
            @foreach (PlantillaMVC.Web.Models.AgregarCarta agregarCarta in Model)
            {
<tr>
    <td>
        @agregarCarta.Nombre
        <form asp-action="Eliminar" method="post">
  
            <input type="hidden" asp-for="@agregarCarta.Nombre" />
            <button type="submit">Eliminar</button>
            <a asp-action="ModificarCarta" asp-route-id="@agregarCarta.Nombre">Modificar</a>

        </form>
    </td>
</tr>            }
        </tbody>
    </table>
    <hr />
    <a asp-action="AgregarCartaForm">Ingresar otra respuesta</a><br />
    <a asp-action="Index">Volver al Inicio</a>
</body>
</html>