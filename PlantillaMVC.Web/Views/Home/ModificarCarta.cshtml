@model PlantillaMVC.Web.Models.AgregarCarta
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Formulario Agregar Carta</title>
</head>
<body>
    <form asp-action="ModificarCarta" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="@Model.Nombre">Nombre:</label>
            <input asp-for="@Model.Nombre" required />
        </div>
        <button type="submit">Modificar Carta</button>
    </form>
</body>
</html>