@model PlantillaMVC.Web.Models.CaracteristicasCarta

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<!DOCTYPE html>
<html>
<head>
    <title>Agregar Caracteristicas</title>
</head>
<body>
    <h1>Caracteristicas</h1>

    <div class="container-fluid col-md-7">
        <form asp-action="CaracteristicaCarta" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Nivel" for="exampleFormControlInput1">Nivel</label>
                    <input asp-for="Nivel" type="number" min="0" max="13" class="form-control" id="excmpleFormControlInput1" placeholder="Ingrese el nivel" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Atributo" for="exampleFormControlInput1">Atributo</label>
                <select asp-for="Atributo" multiple class="form-control" id="excmpleFormControlSelect2">
                    <option>Elige una opcion</option>
                    <option>Oscuridad</option>
                    <option>Luz</option>
                    <option>Tierra</option>
                    <option>Fuego</option>
                </select>
            </div>
        </form>
    </div>
</body>
</html>
