@model IEnumerable<PlantillaMVC.Web.Models.Carta>

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<!DOCTYPE html>

<html>
<head>
    <title>Caracteristicas</title>
</head>
<body>

    <div class="container-fluid">
        <a class="btn btn-primary" asp-controller="Carta" asp-action="CaracteristicaCarta">Agregar cartas</a>
    </div>

    <div class="container-fluid">
        <div>
            <table class="table table-bordered order-table">
                <thead>
                    <tr><th>Nivel</th><th>Atributo</th><th>Descripcion</th><th>Categoria</th><th>Subcategoria</th><th>Ataque</th><th>Defensa</th></tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (PlantillaMVC.Web.Models.Carta caracteristica in Model)
                        {
                            <tr>
                                <td>@caracteristica.Nivel</td>
                                <td>@caracteristica.Atributo</td>
                                <td>@caracteristica.Descripcion</td>
                                <td>@caracteristica.Categoria</td>
                                <td>@caracteristica.Subcategoria</td>
                                <td>@caracteristica.Ataque</td>
                                <td>@caracteristica.Defensa</td>
                                <td></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>