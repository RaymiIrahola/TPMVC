@model PlantillaMVC.Web.Models.Carta
@{ Layout = null; }
<!DOCTYPE html>
<html>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />
<head>
    <title>Carta</title>
</head>
<body>
    <form asp-action="Modificar" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="CartaId">Id:</label>
            <input asp-for="CartaId" />
        </div>
        <div>
            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" />
        </div>
        <div>
            <label asp-for="Nivel">Nivel:</label>
            <input asp-for="Nivel" type="number" min="1" max="13" placeholder="Ingrese el nivel del monstruo" />
        </div>
        <div>
            <label asp-for="Atributo">Atributo:</label>
            <select asp-for="Atributo">
                <option value=""> </option>
                <option>Ninguna, es una Magica/Trampa</option>
                <option>Luz</option>
                <option>Oscurdad</option>
                <option>Fuego</option>
                <option>Viento</option>
                <option>Agua</option>
                <option>Tierra</option>
                <option>Divino</option>
            </select>
        </div>
        <div>
            <label>Categoria</label>
            <select asp-for="Categoria" required>
                <option value=""> </option>
                <option value="Monstruo">Monstruo</option>
                <option value="Trampa">Trampa</option>
                <option value="Magica">Magica</option>
            </select>
        </div>
        <div>
            <label>Subcategoria</label>
            <select asp-for="Subcategoria" required>
                <option value=""> </option>
                <option value="Normal">Normal</option>
                <option value="Efecto">Efecto</option>
                <option value="Toon">Toon</option>
                <option value="Tuner">Tuner</option>
                <option value="Gemini">Gemini</option>
                <option value="Fusion">Fusion</option>
                <option value="Sincronia">Sincronia</option>
                <option value="XYZ">XYZ</option>
                <option value="Pendulo">Pendulo</option>
                <option value="Link">Link</option>
                <option value="Ritual">Ritual</option>
                <option value="Spirit">Spirit</option>
                <option value="Continua">Continua</option>
                <option value="Juego Rapido">Juego Rapido</option>
                <option value="Equipo">Equipo</option>
                <option value="Campo">Campo</option>
                <option value="Contraefecto">Contraefecto</option>
            </select>
        </div>
        <div>
            <label asp-for="Tipo">Tipo:</label>
            <select asp-for="Tipo">
                <option value=""> </option>
                <option value="Ninguna es una Magica/Trampa">Ninguna es una Magica/Trampa</option>
                <option value="Hada">Hada</option>
                <option value="Demonio">Demonio</option>
                <option value="Guerrero">Guerrero</option>
                <option value="Guerrero-Bestias">Guerrero-Bestias</option>
                <option value="Reptil">Reptil</option>
                <option value="Piro">Piro</option>
                <option value="Aqua">Aqua</option>
                <option value="Pez">Pez</option>
                <option value="Lanzador de Conjurose">Lanzador de Conjuros</option>
                <option value="Dragon">Dragon</option>
                <option value="Ciberso">Ciberso</option>
                <option value="Maquina">Maquina</option>
                <option value="Bestia">Bestia</option>
                <option value="Roca">Roca</option>
                <option value="Bestia Alada">Bestia Alada</option>
                <option value="Trueno">Trueno</option>
                <option value="Wyrm">Wyrm</option>
                <option value="Serpiente Marina">Serpiente Marina</option>
                <option value="Psico">Psico</option>
                <option value="Dinosaurio">Dinosaurio</option>
                <option value="Insecto">Insecto</option>
                <option value="Cyborg">Cyborg</option>
                <option value="Magical Knight">Magical Knight</option>
                <option value="High Dragon">High Dragon</option>
                <option value="Omega Psychic">Omega Psychic</option>
                <option value="Celestial Warrior">Celestial Warrior</option>
                <option value="Galaxy">Galaxy</option>
                <option value="Bestia Divina">Bestia Divina</option>
                <option value="Dios Creador">Dios Creador</option>
            </select>
        </div>
        <div>
            <label asp-for="Ataque">Ataque:</label>
            <input asp-for="Ataque" type="number" min="0" max="10000" placeholder="Ingrese el ataque del monstruo" />
        </div>
        <div>
            <label asp-for="Defensa">Defensa:</label>
            <input asp-for="Defensa" type="number" min="0" max="10000" placeholder="Ingrese la defensa del monstruo" />
        </div>
        <div>
            <label asp-for="Descripcion">Descripcion:</label>
            <input asp-for="Descripcion" type="text" required|/>
        </div>
        <button type="submit">Modificar Carta</button>
    </form>
</body>
</html>
